---
import Layout from '../layouts/Layout.astro';
import CodeIcon from '../components/icons/Code.astro'
import BriefcaseIcon from '../components/icons/Briefcase.astro'
import Experience from '../components/Experience.astro'
import AboutMe from '../components/AboutMe.astro'
import ProfileCheck from '../components/icons/ProfileCheck.astro'
import SectionContainer from '../components/SectionContainer.astro'
import Projects from '../components/Projects.astro'
import Hero from '../components/Hero.astro'
---

<Layout 
title="Portfolio Nicolas Elias - Desarrollador y Programador web"
description='Contrata a Nico para crear tu aplicación web o móvil. Desarrollador y Programador Web. Capacitado para en crear aplicaciones, mantener servidores, copias de seguridad, maquinas virtuales y mucho más.'>
	<main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
      <SectionContainer id="experience">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <BriefcaseIcon class="size-8" />
          <span data-i18n="section.experience">Experiencia laboral</span>
        </h2>
        <Experience />
      </SectionContainer>

      <SectionContainer id="project">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
        >
          <CodeIcon class="size-7" />
          <span data-i18n="section.projects">Proyectos</span>
        </h2>
        <Projects />
      </SectionContainer>

      <SectionContainer id="about">
        <h2
          class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
        >
          <ProfileCheck class="size-8" />
          <span data-i18n="section.about">Sobre mí</span>
        </h2>
        <AboutMe />
      </SectionContainer>
    </div>
    </main>
	</main>
</Layout>

