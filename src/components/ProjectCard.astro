---
const { title, tags, index } = Astro.props
---

<article
  class="project-card group cursor-pointer relative perspective-1000"
  data-project-index={index}
  role="button"
  tabindex="0"
  aria-label={`Ver detalles de ${title}`}
>
  <!-- Animated gradient border (like Badge.astro) -->
  <span class="absolute inset-[-2px] rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 overflow-hidden">
    <span
      class="absolute inset-[-1000%] animate-spin-slow bg-[conic-gradient(from_90deg_at_50%_50%,#51E4B8_0%,#21554E_50%,#51E4B8_100%)]"
    ></span>
  </span>

  <!-- Glass card content -->
  <div class="card-content relative bg-white/10 dark:bg-gray-800/50 backdrop-blur-md rounded-xl p-6 md:p-8 border border-gray-200/50 dark:border-gray-700/50 shadow-lg min-h-[280px] flex flex-col justify-between">
    <div>
      <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">
        {title}
      </h3>

      <!-- Tech stack icons in grid -->
      <div class="flex flex-wrap gap-3 mb-6">
        {tags.map((tag) => (
          <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300" title={tag.name}>
            <tag.icon class="size-8 md:size-10" />
          </div>
        ))}
      </div>
    </div>

    <!-- Click prompt -->
    <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-gray-200 transition-colors">
      <span data-i18n="projects.clickMore">Haz clic para ver m√°s</span>
      <svg
        class="size-4 group-hover:translate-x-1 transition-transform"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </div>
</article>

<style>
  .project-card {
    perspective: 1000px;
  }

  .card-content {
    transform-style: preserve-3d;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover .card-content,
  .project-card:focus .card-content {
    transform: rotateX(2deg) rotateY(-5deg) translateZ(10px);
  }

  .project-card:focus {
    outline: none;
  }

  .project-card:focus-visible .card-content {
    ring: 2px;
    ring-color: rgb(245 158 11 / 0.8);
    ring-offset: 2px;
  }

  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 3s linear infinite;
  }
</style>
